<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>ToDo</title>
    <link rel="stylesheet" href="/css/toDoList.css"/>
    <link href="https://fonts.googleapis.com/css?family=Cinzel|Cormorant+Garamond" rel="stylesheet">
    <script src="https://use.fontawesome.com/7a8f184185.js"></script>
  </head>
  <body>
    <div class="main">
      <div class="mainContent">
        <h1>ToDoList</h1>
        <div class="columns">
          <section id="ideas">
            <div class="listBox">
              <h2>Ideas</h2>
              <ul>
                <%
                  if(ideas.length > 0){
                    for(var i=0; i<ideas.length; i++){
                %>
                  <li>
                    <a class="deleteBtn" href="/toDoList/ideas/delete/<%= i %>">
                      <i class="fa fa-times" aria-hidden="true"></i>
                    </a>
                    <a class="priorBtn" href="/toDoList/ideas/prior/<%= i %>">
                      <i class="fa fa-exclamation" aria-hidden="true"></i>
                    </a>
                    <%= ideas[i] %>
                  </li>
                <%}}%>
              </ul>
            </div>
            <form action="/toDoList/ideas/add" method="post">
              <input class="newItem" type="text" name="newIdeasItem" placeholder="Ex. : Me tirer une balle"/>
              <input class="submit" type="submit" name="submit" value="Ajouter à la liste"/>
            </form>
          </section>
          <section id="toDo">
            <div class="listBox">
              <h2>To Do</h2>
              <ul>
                <%
                  if(toDo.length > 0){
                    for(var i=0; i<toDo.length; i++){
                %>
                  <li>
                    <a class="deleteBtn" href="/toDoList/toDo/delete/<%= i %>">
                      <i class="fa fa-times" aria-hidden="true"></i>
                    </a>
                    <a class="priorBtn" href="/toDoList/toDo/prior/<%= i %>">
                      <i class="fa fa-exclamation" aria-hidden="true"></i>
                    </a>
                    <%= toDo[i] %>
                  </li>
                <%}}%>
              </ul>
            </div>
            <form action="/toDoList/toDo/add" method="post">
              <input class="newItem" type="text" name="newToDoItem" placeholder="Ex. : Acheter un flingue"/>
              <input class="submit" type="submit" name="submit" value="Ajouter à la liste"/>
            </form>
          </section>
          <section id="issues">
            <div class="listBox">
              <h2>Issues</h2>
              <ul>
                <%
                  if(issues.length > 0){
                    for(var i=0; i<issues.length; i++){
                %>
                  <li>
                    <a class="deleteBtn" href="/toDoList/issues/delete/<%= i %>">
                      <i class="fa fa-times" aria-hidden="true"></i>
                    </a>
                    <a class="priorBtn" href="/toDoList/issues/prior/<%= i %>">
                      <i class="fa fa-exclamation" aria-hidden="true"></i>
                    </a>
                    <%= issues[i] %>
                  </li>
                <%}}%>
              </ul>
            </div>
            <form action="/toDoList/issues/add" method="post">
              <input class="newItem" type="text" name="newIssuesItem" placeholder="Ex. : Pas assez de fric"/>
              <input class="submit" type="submit" name="submit" value="Ajouter à la liste"/>
            </form>
          </section>
        </div>
      </div>
    </div>
  </body>
</html>
